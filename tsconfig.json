{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "module":"es6",
    "target":"es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }   
  },  
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./dist", "./__tests__"]
}
